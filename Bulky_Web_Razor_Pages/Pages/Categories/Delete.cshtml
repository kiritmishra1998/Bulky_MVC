@page
@model Bulky_Web_Razor_Pages.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.CategoryId" type="hidden" />
    <div class="border p-3 mt-1">
        <div class="row pb-2">
            <h2 class="text-primary">DELETE CATEGORY</h2>
            <hr />
        </div>
        @*     <div span asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" style="background-color: skyblue;" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" style="background-color: skyblue;" />
        </div>
        <div class="row">
            <div class="col-6 col-mid-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-mid-3">
                <a asp-page="/Categories/Index"  class="btn btn-primary form-control">
                    BACK TO LIST
                </a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


